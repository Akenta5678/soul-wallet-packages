{
    "manifest_version": 3,
    "name": "Soul Wallet",
    "description": "Soul Wallet",
    "version": "1.0.0",
    "action": {
        "default_icon": {
            "16": "icon-16.png",
            "48": "icon-48.png",
            "128": "icon-128.png"
        },
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "js/backgroundPage.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/contentScripts.js"],
            "web_accessible_resources": [
                {
                    "resources": [ "inject.js" ],
                    "matches": [ "<all_urls>" ]
                }
            ]
        }
    ],
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "host_permissions": ["https://*/*", "http://*/*"],
    "permissions": [
        "tabs",
        "activeTab",
        "notifications",
        "scripting",
        "storage"
    ]
}
